{% extends 'base.html.twig' %}
{% form_theme formEdit 'bootstrap_5_layout.html.twig' %}
{% block title  "Update" %}

{% block body %}
	<h1>Edite-STUDENT</h1>

	<h3>
		<a href="{{ path('ShowALLStudents') }}" type="button" class="btn btn-danger">Cancel</a>
	</h3>
	<div>
		{{form_start(formEdit)}}
		{{form_row(formEdit.FirstName,{"attr":{"placeholder":"FirstName"}})}}
		{{form_row(formEdit.LastName,{"attr":{"placeholder":"LastName"}})}}
		{{form_row(formEdit.NumEtud,{"attr":{"placeholder":"NumEtud"}})}}
		{{form_row(formEdit.department.Name , {'label': 'Department-Name','attr': {'placeholder': 'Dep-Name'}}) }}
		{{form_row(formEdit.department.Capacity,{"attr":{"placeholder":"Capacity"}})}}
		<button type="submit" class="btn btn-success">Edit-STUDENT</button>
		{{form_end(formEdit)}}
	</div>
{% endblock %}
